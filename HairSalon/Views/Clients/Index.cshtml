@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients: </h2>

@if (Model.Count == 0)
{
  <h4>No clients have been added yet!</h4>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}

<button class="btn btn-primary">@Html.ActionLink("Add new client", "Create")</button>
<button class="btn btn-success">@Html.ActionLink("Navigate to stylists", "Index", "Stylists")</button>
<button class="btn btn-success">@Html.ActionLink("Return to home", "Index", "Home")</button>