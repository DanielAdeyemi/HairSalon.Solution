@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<h2>Stylists: </h2>

@if(Model.Count == 0)
{
  <h4>No stylists have been added yet!</h4>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
}

<button class="btn btn-primary">@Html.ActionLink("Add stylist", "Create")</button>
<button class="btn btn-success">@Html.ActionLink("Return to home page", "Index", "Home")</button>